
// Pink Yuri CFG CS2 (v 1.1) & MrMaxim
echo "Autoexec.cfg foi carregada :D"

// Geral
fps_max "250"											//Taxa de quadros maxima
cl_join_advertise "2"									//1Advertise joinable game in progress to Steam friends, otherwise need a Steam invite (2: all servers, 1: official servers, 0: none)
cl_interp_ratio "1"										//Rodar o game sem atrasos
cl_interp "0.015625"

//Volume e Voz
volume 0.80
snd_voipvolume 0.1

// Aumenta meu volume - Bom pra clutch:
bind f1 "volume 1;snd_voipvolume 0.01"
// Volume normal:
bind f2 "volume 0.85;snd_voipvolume 0.4"
//Abaixa o volume geral:
bind f3 "volume 0.1;snd_voipvolume 0.8"
// Sem som:
bind f4 "volume 0"
//Anti trashtalk
bind f5 "volume 0.85;snd_voipvolume 0"

// Zoom Ratio
